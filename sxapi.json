{
    "name": "sxapi-default",
    "description": "sxapi default config file",
    "version": "0.0.57",
    "debug": true,
    "session": {
        "duration": 3600,
        "auto_create": true,
        "transport": {
            "type": "cookie",
            "cookie_name": "sxapi-sess"
        },
        "backend": {
            "type": "memory",
            "sid_field": "token_sess",
            "fields": {
                "stop": "datefin_sess"
            }
        }
    },
    "resources": {
    },
    "log": {
        "filters": {
            "level": "0,1,2",
            "type": "debug,info,error,warn"
        }
    },
    "server": {
        "type": "express",
        "port": "8080",
        "bodyParserJson": true,
        "bodyParserUrl": true,
        "endpoints": [
            {
                "path": "/",
                "desc": "Display welcome message (HTML)",
                "body": "<html><head><title>sxapi-core API</title></head><body><h1>Your API is live !</h1><p>This API is based on sxapi-core v0.0.57 and use default config file. You can now start to configure your sxapi.json config file in order to build your own API </p></body></html>"
            },
            {
                "path": "/ping",
                "desc": "Ping the application. Return a sample message in json",
                "code": "200",
                "header": {
                    "Content-Type": "application/json"
                },
                "body": "{\"health\":\"good\"}"
            }
        ]
    }
}
