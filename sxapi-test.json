{
    "name": "sxapi-dev-test",
    "description": "sxapi simple config file for dev",
    "version": "dev",
    "debug": true,
    "session": {
        "duration": 3600,
        "auto_create": true,
        "transport": {
            "type": "cookie",
            "cookie_name": "sxapi-sess"
        },
        "backend": {
            "type": "mysql",
            "resource": "mysql-sxa",
            "table": "session",
            "sid_field": "token_sess",
            "id_field": "id_sess",
            "fields": {
                "ip": "ip_sess",
                "start": "date_sess",
                "stop": "datefin_sess"
            }
        }
    },
    "resources": {
        "mysql-sxa": {
            "_class": "mysql",
            "type": "mysql",
            "server": {
                "host": "172.17.42.1",
                "port": "3306",
                "user": "dev",
                "password": "dev",
                "database": "sxa"
            }
        }
    },
    "log": {
        "filters": {
            "level": "0,1,2,3,4",
            "type": "debug,info,error,warn"
        }
    },
    "server": {
        "type": "express",
        "port": "8080",
        "bodyParserJson": true,
        "bodyParserUrl": true,
        "endpoints": [
            {
                "path": "/",
                "body": "<html><head></head><body><h1>TEST STARTX v4</h1></body></html>"
            },
            {
                "path": "/ping",
                "code": "200",
                "header": {
                    "Content-Type": "application/json"
                },
                "body": "{\"health\":\"good\"}"
            },
            {
                "path": "/session",
                "method": "ROUTER",
                "resource": "mysql-sxa",
                "table": "session",
                "id_field": "id_sess",
                "endpoints": [
                    {
                        "path": "/session",
                        "method": "GET",
                        "resource_handler": "endpoints.list",
                        "sql": "SELECT * FROM `session` {{#id}} WHERE id_sess='{{id}}'{{/id}} LIMIT 10"
                    },
                    {
                        "path": "/session",
                        "method": "POST",
                        "resource_handler": "endpoints.create"
                    },
                    {
                        "path": "/session/:id",
                        "method": "GET",
                        "resource_handler": "endpoints.get"
                    },
                    {
                        "path": "/session/:id",
                        "method": "PUT",
                        "resource_handler": "endpoints.update"
                    },
                    {
                        "path": "/session/:id",
                        "method": "DELETE",
                        "resource_handler": "endpoints.delete"
                    }
                ]
            }
        ]
    }
}
